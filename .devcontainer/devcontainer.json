// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet-postgres
{
    "name": "CMS",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "9.0"
		},
		"ghcr.io/warrenbuckley/codespace-features/smtp4dev:1": {
			"autorun": true,
			"webport": "9004",
			"smtpport": "587",
			"imapport": "143"
		},
		"ghcr.io/r3dpoint/devcontainer-features/tailwindcss-standalone-cli:1": {}
	},

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"bradlc.vscode-tailwindcss",
				"ms-ossdata.vscode-pgsql"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [9004],
	// "portsAttributes": {
	//		"5001": {
	//			"protocol": "https"
	//		}
	// }

    // Use 'postCreateCommand' to run commands after the container is created.
	// * Start up tailwind in watch mode
    "postCreateCommand": "tailwindcss -i src/CMS.Main/wwwroot/css/app.css -o src/CMS.Main/wwwroot/css/tailwind.css",
    // "portsAttributes": {
    //     "5146": {
    //         "label": "5147"
    //     }
    // }

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",
}
