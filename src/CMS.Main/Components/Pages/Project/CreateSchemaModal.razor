@rendermode InteractiveServer
@attribute [Authorize]

@using Microsoft.AspNetCore.Components.Forms
@using CMS.Main.Components.Utilities.Button

@if (IsOpen)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/40 backdrop-blur opacity-100"
         aria-modal="true" role="dialog" tabindex="-1" @onkeydown="HandleKeyDown">
        <div class="rounded-xl border border-neutral-800 bg-gradient-to-b from-neutral-800 to-neutral-800/90 shadow-sm p-6 max-w-sm sm:max-w-md w-full mx-4 overflow-auto max-h-screen">
            <div class="mb-6 flex items-center justify-between">
                <div class="flex items-center gap-2">
                    <h2 class="text-lg font-medium text-neutral-100">Create Schema</h2>
                </div>
                <button @onclick="CloseModal" class="text-neutral-400 hover:text-neutral-100 transition-colors" aria-label="Close modal">
                    <span class="material-symbols-outlined icons-default text-xl">close</span>
                </button>
            </div>

            <EditForm Model="@CreateDto" OnValidSubmit="@HandleValidSubmit" FormName="CreateSchemaForm">
                <DataAnnotationsValidator/>

                <div class="mb-6">
                    <label for="schema-name" class="block text-xs font-medium uppercase tracking-wide text-neutral-400 mb-1">
                        Schema Name
                    </label>
                    <InputText id="schema-name"
                                @bind-Value="CreateDto.Name"
                                class="block text-sm w-full rounded-full border border-neutral-600 bg-neutral-700 shadow-sm focus:border-purple-500 focus:ring-purple-500 text-neutral-100 px-3 py-2"
                                placeholder="Enter schema name"/>
                    <ValidationMessage For="@(() => CreateDto.Name)"
                                        class="text-rose-600 text-xs mt-1" />
                </div>

                <div class="flex justify-end gap-2">
                    <PrimaryButton Type="submit" Variant="ButtonVariant.Primary" Icon="save">Create Schema</PrimaryButton>
                </div>
            </EditForm>
        </div>
    </div>
}
