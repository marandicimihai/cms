@rendermode InteractiveServer

<div class="rounded-lg border border-slate-200 bg-white shadow-sm p-4 mb-4 max-w-screen-lg mx-auto">
    <div class="flex items-center justify-between mb-3">
        <h2 class="text-lg font-medium">Schemas</h2>
        @if (!IsAddFormVisible)
        {
            <button
                class="inline-flex items-center justify-center rounded-md font-medium bg-blue-600 text-white hover:bg-blue-700 text-sm px-3 py-2 focus:ring-2 focus:ring-blue-500"
                aria-label="Add Schema" @onclick="ShowAddForm">
                <span class="material-symbols-outlined icons-default text-base mr-2">add</span>
                Add Schema
            </button>
        }
    </div>
    <StatusIndicator @ref="statusIndicator">@statusText</StatusIndicator>
    @if (IsAddFormVisible)
    {
        <EditForm Model="NewSchema" OnValidSubmit="HandleAddSchema" class="mb-4">
            <DataAnnotationsValidator />
            <div class="flex flex-col gap-2">
                <label for="schema-name" class="text-xs uppercase tracking-wide text-slate-600">Schema Name</label>
                <InputText @bind-Value="NewSchema.Name" id="schema-name" class="block w-full rounded-md border border-slate-300 shadow-sm text-sm px-3 py-2 focus:border-blue-500 focus:ring-blue-500" placeholder="Enter schema name" aria-label="Schema Name" />
                <ValidationMessage For="() => NewSchema.Name" class="text-rose-600 text-xs" />
            </div>
            <div class="flex gap-2 mt-4">
                <button type="submit" class="inline-flex items-center justify-center rounded-md font-medium bg-blue-600 text-white hover:bg-blue-700 text-sm px-3 py-2 focus:ring-2 focus:ring-blue-500 min-w-[120px]" aria-label="Create Schema" disabled="@IsCreatingSchema">
                    @if (IsCreatingSchema)
                    {
                        <span class="material-symbols-outlined icons-default text-base animate-spin text-white" aria-label="Loading">progress_activity</span>
                    }
                    else
                    {
                        <span class="material-symbols-outlined icons-default text-base mr-2">save</span>
                        <span>Create Schema</span>
                    }
                </button>
                <button type="button" class="inline-flex items-center justify-center rounded-md font-medium bg-slate-200 text-slate-900 hover:bg-slate-300 text-sm px-3 py-2 focus:ring-2 focus:ring-blue-500" aria-label="Cancel" @onclick="HideAddForm">
                    <span class="material-symbols-outlined icons-default text-base mr-2">close</span>
                    Cancel
                </button>
            </div>
        </EditForm>
    }
    @if (Schemas?.Count > 0)
    {
        <table class="min-w-full divide-y divide-slate-200">
            <thead>
            <tr>
                <th class="px-3 py-2 text-left text-xs font-medium text-slate-600 uppercase tracking-wide">Name</th>
                <th class="px-3 py-2 text-right text-xs font-medium text-slate-600 uppercase tracking-wide">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var schema in Schemas)
            {
                <tr>
                    <td class="px-3 py-2 text-sm text-slate-900">@schema.Name</td>
                    <td class="px-3 py-2 text-sm text-slate-900 text-right flex gap-2 justify-end">
                        <NavLink class="inline-flex items-center justify-center rounded-md font-medium bg-slate-200 text-slate-900 hover:bg-slate-300 text-xs px-2.5 py-1.5 focus:ring-2 focus:ring-blue-500" aria-label="View entries" href="@($"/project/{ProjectId}/schema/{schema.Id}/entries?from=project")">
                            <span class="material-symbols-outlined icons-default text-base mr-1">arrow_forward</span>
                            View Entries
                        </NavLink>
                        <NavLink class="inline-flex items-center justify-center rounded-md font-medium bg-blue-600 text-white hover:bg-blue-700 text-xs px-2.5 py-1.5 focus:ring-2 focus:ring-blue-500" aria-label="Edit schema" href="@($"/project/{ProjectId}/schema/{schema.Id}")">
                            <span class="material-symbols-outlined icons-default text-base mr-1">edit</span>
                            Edit
                        </NavLink>
                        <button type="button"
                                class="inline-flex items-center justify-center rounded-md font-medium bg-rose-600 text-white hover:bg-rose-700 text-xs px-2.5 py-1.5 focus:ring-2 focus:ring-rose-500"
                                aria-label="Delete schema" @onclick="() => OnDeleteSchemaAsync(schema)">
                            <span class="material-symbols-outlined icons-default text-base mr-1">delete</span>
                            Delete
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-slate-500 text-sm">No schemas found for this project.</div>
    }
</div>
