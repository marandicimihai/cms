@page "/new"
@rendermode InteractiveServer
@attribute [Authorize]

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<div class="max-w-screen-lg mx-auto p-4">
    <div class="mb-4">
        <h1 class="text-2xl font-semibold text-slate-900">Create New Project</h1>
        <p class="text-sm text-slate-600 mt-1">Set up a new project to get started</p>
    </div>

    <div class="rounded-lg border border-slate-200 bg-white shadow-sm p-4">
        @if (projectUrl != null)
        {
            <div class="text-center">
                <div class="mb-4">
                    <span
                        class="material-symbols-outlined icons-default text-4xl text-emerald-600 mb-2">check_circle</span>
                </div>
                <h2 class="text-lg font-medium text-slate-900 mb-2">Project Created Successfully!</h2>
                <p class="text-sm text-slate-600 mb-6">Your project is ready. Click below to start working on it.</p>
                <PrimaryButton Variant="ButtonVariant.Primary" OnClick="() => Navigation.NavigateTo(projectUrl)" role="link" aria-label="Go to project page">Go To Project Page</PrimaryButton>
            </div>
        }
        else
        {
            <EditForm Model="@ProjectDto" OnValidSubmit="@HandleValidSubmit" FormName="CreateProjectForm">
                <DataAnnotationsValidator/>

                <div class="mb-4">
                    <label for="name" class="block text-xs font-medium uppercase tracking-wide text-slate-600 mb-2">
                        Project Name
                    </label>
                    <InputText id="name"
                               @bind-Value="ProjectDto.Name"
                               class="block w-full rounded-md border border-slate-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm px-3 py-2"
                               placeholder="Enter project name"/>
                    <ValidationMessage For="@(() => ProjectDto.Name)"
                                       AdditionalAttributes="@(new Dictionary<string, object> { { "class", "text-rose-600 text-xs mt-1" } })"/>
                </div>

                <div class="flex gap-2">
                    <PrimaryButton Type="submit" Variant="ButtonVariant.Primary">Create Project</PrimaryButton>
                </div>
            </EditForm>
        }
    </div>
</div>

<p class="hidden text-rose-600 text-xs mt-1"></p>