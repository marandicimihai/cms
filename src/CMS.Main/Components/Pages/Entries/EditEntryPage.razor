@page "/entry/{entryId:guid}/edit"
@rendermode InteractiveServer

@if (Entry is not null)
{
    <BackButton Href="@($"/schema/{Entry?.SchemaId}/entries")" Text="Back to Entries" />
    
    <h2 class="text-sm font-medium text-neutral-100 mb-3">Update entry</h2>
    @if (Entry is not null)
    {
        <DynamicEntryForm Properties="Entry.Schema.Properties" InitialValues="Entry.Fields.Values.ToList()" OnValidSubmit="UpdateEntry" />
    }
}
else
{
    <BackButton />
}
