@page "/Account/Manage/PersonalData"

@inject IdentityUserAccessor UserAccessor

<PageTitle>Personal Data</PageTitle>

<div class="max-w-screen-lg mx-auto p-4">
    <div class="mb-4">
        <h1 class="text-2xl font-semibold text-slate-900">Personal Data</h1>
        <StatusMessage/>
    </div>
    <div class="rounded-lg border border-slate-200 bg-white shadow-sm p-4 max-w-md">
        <p class="text-sm text-slate-600 mb-2">Your account contains personal data that you have given us. This page
            allows you to download or delete that data.</p>
        <div class="bg-rose-50 border border-rose-200 text-rose-600 text-xs p-3 rounded-md mb-4 flex items-center">
            <span class="material-symbols-outlined icons-default text-base mr-2">warning</span>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </div>
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken/>
            <button
                class="w-full inline-flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mb-2"
                type="submit">
                <span class="material-symbols-outlined icons-default text-base mr-2">download</span>
                Download
            </button>
        </form>
        <a href="Account/Manage/DeletePersonalData"
           class="w-full inline-flex items-center justify-center bg-rose-600 hover:bg-rose-700 text-white text-sm font-medium px-3 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500">
            <span class="material-symbols-outlined icons-default text-base mr-2">delete</span>
            Delete
        </a>
    </div>
</div>

@code {

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _ = await UserAccessor.GetRequiredUserAsync(HttpContext);
    }

}