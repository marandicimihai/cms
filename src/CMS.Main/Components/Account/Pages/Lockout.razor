@page "/Account/Lockout"

<PageTitle>Locked out</PageTitle>

<div class="min-h-screen bg-slate-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="rounded-lg border border-slate-200 bg-white shadow-sm p-6 text-center">
            <div class="mb-4">
                <span class="material-symbols-outlined icons-default text-6xl text-rose-600">lock</span>
            </div>
            <h1 class="text-2xl font-semibold text-slate-900 mb-2">Locked out</h1>
            <p class="text-sm text-slate-600 mb-4" role="alert">
                This account has been locked out, please try again later.
            </p>
        </div>
    </div>
</div>
