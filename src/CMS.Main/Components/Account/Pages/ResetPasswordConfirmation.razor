@page "/Account/ResetPasswordConfirmation"
<PageTitle>Reset password confirmation</PageTitle>

<div class="min-h-screen bg-neutral-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="rounded-xl border border-neutral-800 bg-gradient-to-b from-neutral-800 to-neutral-800/90 shadow-sm p-6 text-center">
            <div class="mb-4">
                <span class="material-symbols-outlined icons-default text-6xl text-emerald-500">check_circle</span>
            </div>
            <h1 class="text-2xl font-semibold text-neutral-100 mb-2">Password Reset Complete</h1>
            <p class="text-sm text-neutral-400 mb-4" role="alert">
                Your password has been successfully reset. You can now sign in with your new password.
            </p>
            <div class="mt-6">
                <LinkButton Href="Account/Login" Icon="login" aria-label="Sign In Now">Sign In Now</LinkButton>
            </div>
        </div>
    </div>
</div>
