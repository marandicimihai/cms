<StatusMessage Message="@StatusMessage"/>
<div class="max-w-md">
    <h1 class="text-2xl font-semibold text-neutral-100 mb-4">Recovery codes</h1>
    <div class="bg-amber-500/10 border border-amber-500/20 text-amber-400 rounded-md p-3 mb-4 flex items-start" role="alert">
        <span class="material-symbols-outlined icons-default text-base mr-2 mt-0.5">warning</span>
        <div>
            <p class="text-sm font-semibold mb-1">Put these codes in a safe place.</p>
            <p class="text-sm">
                If you lose your device and don't have the recovery codes you will lose access to your account.
            </p>
        </div>
    </div>
    <div class="rounded-xl border border-neutral-800 bg-linear-to-b from-neutral-800 to-neutral-800/90 shadow-sm p-4">
        <div class="grid grid-cols-2 gap-2">
            @foreach (var recoveryCode in RecoveryCodes)
            {
                <code class="bg-neutral-700 text-neutral-100 px-3 py-2 rounded-md text-sm font-mono">@recoveryCode</code>
            }
        </div>
    </div>
</div>

@code {

    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }

}