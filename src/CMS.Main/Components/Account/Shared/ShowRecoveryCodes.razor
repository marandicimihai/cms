<StatusMessage Message="@StatusMessage"/>
<h3 class="text-lg font-medium text-neutral-100">Recovery codes</h3>
<div class="alert alert-warning bg-purple-900/50 text-purple-200 border border-purple-600 rounded-md p-3" role="alert">
    <p class="text-sm">
        <strong>Put these codes in a safe place.</strong>
    </p>
    <p class="text-sm">
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </p>
</div>
<div class="row">
    <div class="col-md-12">
        @foreach (var recoveryCode in RecoveryCodes)
        {
            <div>
                <code class="recovery-code bg-neutral-700 text-neutral-100 px-3 py-2 rounded-md">@recoveryCode</code>
            </div>
        }
    </div>
</div>

@code {

    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }

}