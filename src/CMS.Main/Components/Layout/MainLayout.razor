@inherits LayoutComponentBase

<div class="flex flex-col min-h-screen bg-slate-50">
    <!-- Navbar -->
    <NavBar />

    <!-- Main Content with Sidebar -->
    <div class="flex flex-1 overflow-hidden">
        <!-- Sidebar -->
        <SideBar />

        <!-- Main Content -->
        <main class="flex-1 p-4 overflow-auto">
            <div class="max-w-screen-lg mx-auto">
                @Body
            </div>
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 w-full bg-red-600 text-white p-4">
    An unhandled error has occurred.
    <a href="." class="underline hover:text-slate-200">Reload</a>
    <span class="dismiss float-right cursor-pointer">🗙</span>
</div>

@code {
    // No special code needed here as components handle their own logic
}