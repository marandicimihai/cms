@inherits LayoutComponentBase

<!-- Nebula background canvas (full-screen) -->
<canvas id="nebula-canvas" style="position: fixed; inset: 0; width: 100%; height: 100%; z-index: 0; pointer-events: none;"></canvas>

<div class="flex flex-col min-h-screen relative z-10">
    <!-- Main Content with Sidebar -->
    <div class="flex flex-1 overflow-hidden">
        <!-- Sidebar -->
        <SideBar />

        <!-- Main Content -->
        <main class="flex-1 overflow-auto transition-all duration-300" style="padding-left:var(--sidebar-width,16rem);">
            <div class="p-6">
                @Body
            </div>
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 w-full bg-rose-600">
    <div class="text-white p-4 flex items-center justify-between">
        <span>An unhandled error has occurred.</span>
        <div class="flex items-center gap-4">
            <a href="." class="underline hover:text-rose-200 text-sm">Reload</a>
            <span class="dismiss cursor-pointer text-sm">Dismiss</span>
        </div>
    </div>
</div>

<ConfirmationModal />
<NotificationPopUp />
<CreateProjectModal />

<script src="/js/nebula-background.js"></script>
<script src="/js/sidebar.js"></script>