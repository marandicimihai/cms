@rendermode InteractiveServer

<nav class="bg-white border-b border-slate-200 shadow-sm">
    <div class="w-full px-4">
        <div class="flex justify-between h-14">
            <!-- Logo/Brand -->
            <div class="flex items-center">
                <a href="/" class="text-slate-900 text-lg font-semibold">CMS</a>
            </div>

            <!-- Auth Section -->
            <div class="hidden md:flex items-center space-x-2">
                <AuthorizeView>
                    <NotAuthorized>
                        <div class="flex items-center space-x-2">
                            <a href="/Account/Login"
                               class="inline-flex items-center text-sm text-slate-600 px-2 py-1.5 rounded-md hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-blue-500"
                               aria-label="Sign in">
                                <span class="material-symbols-outlined icons-default text-base mr-1">login</span>
                                Sign in
                            </a>
                            <a href="/Account/Register"
                               class="inline-flex items-center text-sm text-slate-600 px-2 py-1.5 rounded-md hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-blue-500"
                               aria-label="Register">
                                <span class="material-symbols-outlined icons-default text-base mr-1">person_add</span>
                                Register
                            </a>
                        </div>
                    </NotAuthorized>
                    <Authorized>
                        <div class="flex items-center space-x-2">
                            <a href="/Account/Manage"
                               class="inline-flex items-center text-sm text-slate-600 px-2 py-1.5 rounded-md hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-blue-500 max-w-[200px]"
                               aria-label="Manage account" title="@context.User.Identity?.Name">
                                <span class="material-symbols-outlined icons-default text-base mr-1">person</span>
                                <span class="truncate">@context.User.Identity?.Name</span>
                            </a>
                            <form method="post" action="/Account/Logout" class="inline">
                                <AntiforgeryToken/>
                                <input type="hidden" name="returnUrl" value="@Nav.ToBaseRelativePath(Nav.Uri)"/>
                                <PrimaryButton Type="submit" Variant="ButtonVariant.Danger" Icon="logout" aria-label="Sign out">Sign out</PrimaryButton>
                            </form>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden flex items-center">
                <SecondaryButton @onclick="ToggleMobileMenu" Type="button" Variant="ButtonVariant.Neutral" aria-label="Toggle menu">
                    <span class="material-symbols-outlined icons-default text-2xl">menu</span>
                </SecondaryButton>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    <div class="@(isMobileMenuOpen ? "block" : "hidden") md:hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1">
            <AuthorizeView>
                <NotAuthorized>
                    <a href="/Account/Login"
                       class="block px-3 py-2 text-sm font-medium text-slate-600 rounded-md hover:bg-slate-100">Sign
                        in</a>
                    <a href="/Account/Register"
                       class="block px-3 py-2 text-sm font-medium text-slate-600 rounded-md hover:bg-slate-100">Register</a>
                </NotAuthorized>
                <Authorized>
                    <a href="/Account/Manage"
                       class="block px-3 py-2 text-sm font-medium text-slate-600 rounded-md hover:bg-slate-100"
                       title="Manage account">@context.User.Identity?.Name</a>
                    <form method="post" action="/Account/Logout" class="px-3 py-2">
                        <AntiforgeryToken/>
                        <input type="hidden" name="returnUrl" value="@Nav.ToBaseRelativePath(Nav.Uri)"/>
                        <PrimaryButton Type="submit" Variant="ButtonVariant.Danger" aria-label="Sign out">Sign out</PrimaryButton>
                    </form>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private bool isMobileMenuOpen;

    [Inject]
    private NavigationManager Nav { get; set; } = default!;

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

}
