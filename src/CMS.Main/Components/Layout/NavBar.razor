@rendermode InteractiveServer

<nav class="bg-neutral-900/80 border-b border-neutral-800">
    <div class="w-full px-4">
        <div class="flex justify-between h-14">
            <!-- Logo/Brand -->
            <div class="flex items-center">
                <a href="/" class="text-neutral-100 text-lg font-semibold hover:text-purple-500 transition-colors">CMS</a>
            </div>

            <!-- Auth Section -->
            <div class="hidden md:flex items-center gap-2">
                <AuthorizeView>
                    <NotAuthorized>
                        <div class="flex items-center gap-2">
                            <a href="/Account/Login"
                               class="inline-flex items-center gap-2 text-sm text-neutral-100 px-3 py-2 rounded-full hover:bg-neutral-800 transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500"
                               aria-label="Sign in">
                                <span class="material-symbols-outlined icons-default text-base">login</span>
                                Sign in
                            </a>
                            <a href="/Account/Register"
                               class="inline-flex items-center gap-2 text-sm font-medium text-white bg-purple-500 hover:bg-purple-600 px-3 py-2 rounded-full transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500"
                               aria-label="Register">
                                <span class="material-symbols-outlined icons-default text-base">person_add</span>
                                Register
                            </a>
                        </div>
                    </NotAuthorized>
                    <Authorized>
                        <div class="flex items-center gap-2">
                            <a href="/Account/Manage"
                               class="inline-flex items-center gap-2 text-sm text-neutral-100 px-3 py-2 rounded-full hover:bg-neutral-800 transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500 max-w-[200px]"
                               aria-label="Manage account" title="@context.User.Identity?.Name">
                                <span class="material-symbols-outlined icons-default text-base">person</span>
                                <span class="truncate">@context.User.Identity?.Name</span>
                            </a>
                            <form method="post" action="/Account/Logout" class="inline">
                                <AntiforgeryToken/>
                                <input type="hidden" name="returnUrl" value="@Nav.ToBaseRelativePath(Nav.Uri)"/>
                                <PrimaryButton Type="submit" Variant="ButtonVariant.Danger" Icon="logout" aria-label="Sign out">Sign out</PrimaryButton>
                            </form>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden flex items-center">
                <button @onclick="ToggleMobileMenu" 
                        type="button" 
                        class="inline-flex items-center justify-center p-2 rounded-full text-neutral-100 hover:bg-neutral-800 transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500"
                        aria-label="Toggle menu">
                    <span class="material-symbols-outlined icons-default text-2xl">menu</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    <div class="@(isMobileMenuOpen ? "block" : "hidden") md:hidden bg-neutral-800/50" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1">
            <AuthorizeView>
                <NotAuthorized>
                    <a href="/Account/Login"
                       class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-neutral-100 rounded-full hover:bg-neutral-800 transition-colors">
                        <span class="material-symbols-outlined icons-default text-base">login</span>
                        Sign in
                    </a>
                    <a href="/Account/Register"
                       class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-neutral-100 rounded-full hover:bg-neutral-800 transition-colors">
                        <span class="material-symbols-outlined icons-default text-base">person_add</span>
                        Register
                    </a>
                </NotAuthorized>
                <Authorized>
                    <a href="/Account/Manage"
                       class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-neutral-100 rounded-full hover:bg-neutral-800 transition-colors"
                       title="Manage account">
                        <span class="material-symbols-outlined icons-default text-base">person</span>
                        <span class="truncate">@context.User.Identity?.Name</span>
                    </a>
                    <form method="post" action="/Account/Logout" class="px-3 py-2">
                        <AntiforgeryToken/>
                        <input type="hidden" name="returnUrl" value="@Nav.ToBaseRelativePath(Nav.Uri)"/>
                        <PrimaryButton Type="submit" Variant="ButtonVariant.Danger" Icon="logout" aria-label="Sign out">Sign out</PrimaryButton>
                    </form>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private bool isMobileMenuOpen;

    [Inject]
    private NavigationManager Nav { get; set; } = default!;

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

}
