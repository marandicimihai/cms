@rendermode InteractiveServer

<SecondaryButton @onclick="NavigateToDestination" Variant="ButtonVariant.Neutral" Icon="arrow_back" aria-label="Back">@ButtonText</SecondaryButton>

@code {
    [Parameter]
    public string Href { get; set; } = "/";

    [Parameter]
    public string? Text { get; set; }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private string ButtonText => string.IsNullOrWhiteSpace(Text) ? "Back" : Text;

    private void NavigateToDestination()
    {
        NavigationManager.NavigateTo(Href);
    }
}
