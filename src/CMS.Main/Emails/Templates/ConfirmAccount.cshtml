@model CMS.Main.Emails.Templates.ConfirmAccountModel

<!DOCTYPE html>
<html lang="en">

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body style="font-family: Arial, sans-serif; background-color: #f8fafc; padding: 0; margin: 0;">
<div
	style="max-width: 600px; margin: 32px auto; background-color: #fff; padding: 24px 32px; border-radius: 12px; border: 1px solid #e2e8f0; box-shadow: 0 2px 8px rgba(0,0,0,0.04);">
	<h1 style="color: #0f172a; font-size: 20px; font-weight: 600; margin-bottom: 16px;">Confirm your account</h1>
	<p style="font-size: 15px; color: #334155; margin-bottom: 24px;">
		To finish creating your account, please confirm it by clicking the button below:
	</p>

	<a href="@Model.ConfirmationLink"
	   style="display: inline-block; padding: 10px 22px; background-color: #2563eb; color: #fff; text-decoration: none; border-radius: 6px; font-size: 15px; font-weight: 500; margin-bottom: 20px; border: none;">
		Confirm Account
	</a>

	<p style="font-size: 13px; color: #64748b; margin-top: 32px;">
		If the button doesn't work, copy and paste the link below into your browser:<br>
		<a href="@Model.ConfirmationLink"
		   style="color: #2563eb; word-break: break-word; overflow-wrap: break-word; text-decoration: underline;">@Model.ConfirmationLink</a>
	</p>
</div>
</body>

</html>