@model CMS.Main.Emails.Templates.ResetPasswordLinkModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body style="font-family: Arial, sans-serif; background-color: #f4f4f7; padding: 20px; margin: 0;">
<div
    style="max-width: 600px; margin: auto; background-color: #ffffff; padding: 40px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
    <h1 style="color: #333333; font-size: 24px; margin-bottom: 20px;">Reset your password</h1>

    <p style="font-size: 16px; color: #555555; margin-bottom: 30px;">
        You requested to reset your password. Click the button below to choose a new one:
    </p>

    <a href="@Model.ResetLink"
       style="display: inline-block; padding: 12px 24px; background-color: #2196F3; color: #ffffff; text-decoration: none; border-radius: 4px; font-size: 16px; margin-bottom: 20px;">
        Reset Password
    </a>

    <p style="font-size: 14px; color: #999999; margin-top: 40px;">
        If the button doesn't work, copy and paste the link below into your browser:<br>
        <a href="@Model.ResetLink"
           style="color: #2a7ae2; word-break: break-word; overflow-wrap: break-word;">@Model.ResetLink</a>
    </p>
</div>
</body>

</html>
