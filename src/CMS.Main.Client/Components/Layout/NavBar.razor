@rendermode InteractiveAuto

<nav class="bg-white border-b border-slate-200 shadow-sm">
    <div class="w-full px-4">
        <div class="flex justify-between h-14">
            <!-- Logo/Brand -->
            <div class="flex items-center">
                <a href="/" class="text-slate-900 text-lg font-semibold">CMS</a>
            </div>

            <!-- Navigation Items -->
            <div class="hidden md:flex items-center space-x-4">
                @foreach (var item in navItems)
                {
                    <NavLink href="@item.Href"
                             class="text-sm font-medium text-slate-600 px-3 py-2 rounded-md hover:bg-slate-100"
                             ActiveClass="text-blue-600 bg-blue-50"
                             Match="@(item.MatchAll ? NavLinkMatch.All : NavLinkMatch.Prefix)">
                        @item.DisplayName
                    </NavLink>
                }
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden flex items-center">
                <button @onclick="ToggleMobileMenu" type="button" class="text-slate-600 hover:text-slate-900 p-2" aria-controls="mobile-menu" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    <div class="@(isMobileMenuOpen ? "block" : "hidden") md:hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1">
            @foreach (var item in navItems)
            {
                <NavLink href="@item.Href"
                         class="block pl-3 pr-4 py-2 text-base font-medium text-slate-900 hover:bg-slate-200"
                         ActiveClass="bg-blue-50 border-l-4 border-blue-600 text-blue-600"
                         Match="@(item.MatchAll ? NavLinkMatch.All : NavLinkMatch.Prefix)">
                    @item.DisplayName
                </NavLink>
            }
        </div>
    </div>
</nav>

@code {
    private bool isMobileMenuOpen;

    private record NavItem(string Href, string DisplayName, bool MatchAll = false);
    private readonly List<NavItem> navItems = new()
    {
        new NavItem("/", "Dashboard", true),
        new NavItem("/content", "Content"),
        new NavItem("/users", "Users"),
        new NavItem("/settings", "Settings")
    };

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }
}
