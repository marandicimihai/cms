@model CMS.Backend.Emails.Templates.ResetPasswordCodeModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body style="font-family: Arial, sans-serif; background-color: #f4f4f7; padding: 20px; margin: 0;">
<div style="max-width: 600px; margin: auto; background-color: #ffffff; padding: 40px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
    <h1 style="color: #333333; font-size: 24px; margin-bottom: 20px;">Your password reset code</h1>

    <p style="font-size: 16px; color: #555555; margin-bottom: 30px;">
        Use the code below to reset your password. It expires shortly, so make sure to enter it soon:
    </p>

    <div style="font-size: 20px; font-weight: bold; background-color: #f0f0f0; padding: 12px 20px; border-radius: 4px; display: inline-block; letter-spacing: 2px; color: #333333; word-break: break-word; overflow-wrap: break-word;">
        @Model.ResetCode
    </div>

    <p style="font-size: 14px; color: #999999; margin-top: 40px;">
        If you didnâ€™t request this, you can safely ignore this email.
    </p>
</div>
</body>

</html>